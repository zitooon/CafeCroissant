<%if @comment.is_service == 1
@h3_name = "Service"
else
@h3_name = "\"Quien somos\""
end%>

<h3>Editing <%= @h3_name%> details</h3>
<br/>

<%= error_messages_for :comment %>

<% form_for(@comment , :html => {:multipart => true}) do |f| %>
	<p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body, :style => 'height:100px' %>
  </p>

  <p>
  <b>Picture</b><br />
  <%= image_tag("services/#{@comment.picture}", :border=>0, :style =>"vertical-align: top")%>
  <p>
    <b>Change the picture:</b><br />
	<%= file_field_tag :fichier %>
  </p>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @comment %> |
<%= link_to 'Back', comments_path %>
