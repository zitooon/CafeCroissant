<h3>New service</h3>

<%= error_messages_for :comment %>

<% form_for(@comment , :html => {:multipart => true}) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body, :style => "height:100px" %>
  </p>

   <p>
   <b>Picture</b><br />
   <%= file_field_tag :fichier %>
  </p>
   
    <%= f.hidden_field :is_service, :value => 1 %>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', comments_path %>
