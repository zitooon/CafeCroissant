<h3>Editing contact details</h3>

<%= error_messages_for :contact %>
<br/>
<% form_for(@contact , :html => {:multipart => true}) do |f| %>
	<p>
    <b>Firstname</b><br />
    <%= f.text_field :firstname %>
  </p>

  <p>
    <b>Lastname</b><br />
    <%= f.text_field :lastname %>
  </p>

  <p>
    <b>Function</b><br />
    <%= f.text_field :function %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Address</b><br />
    <%= f.text_area :address, :style => "height:100px" %>
  </p>

  <p>
    <b>Zip</b><br />
    <%= f.text_field :zip %>
  </p>

  <p>
    <b>City</b><br />
    <%= f.text_field :city %>
  </p>

  <p>
    <b>Country</b><br />
    <%= f.text_field :country %>
  </p>

  <p>
    <b>Phone1</b><br />
    <%= f.text_field :phone1 %>
  </p>

  <p>
    <b>Phone2</b><br />
    <%= f.text_field :phone2 %>
  </p>

  <p>
  <b>Picture</b><br />
  <%= image_tag("contacts/#{@contact.picture}", :border=>0, :style =>"vertical-align: top")%>
  <p>
    <b>Change the picture:</b><br />
	<%= file_field_tag :fichier %>
  </p>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @contact %> |
<%= link_to 'Back', contacts_path %>
