<h3>Editing product</h3>

<%= error_messages_for :product %>
<br/>
<% form_for(@product , :html => {:multipart => true}) do |f| %>
	<p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description, :style => 'height:100px' %>
  </p>

  <p>
    <b>Price</b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <b>Picture</b><br />
    <%= image_tag("products/#{@product.picture}", :border=>0, :style =>"vertical-align: top")%>
	<p>
    <b>Change the picture:</b><br />
	<%= file_field_tag :fichier %>
	</p>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @product %> |
<%= link_to 'Back', products_path %>
